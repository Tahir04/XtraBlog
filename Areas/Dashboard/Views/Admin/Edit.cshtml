@model XtraBlog.UI.Dtos.AdminDtos.AdminEditDto

<div class="container w-50 mt-5 mb-5 shadow p-4 rounded">
    <h2 class="text-center mb-4">Edit Admin Paramether</h2>
    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <label asp-for="Name" class="font-weight-bold">Admin Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="font-weight-bold">Admin Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhotoURL" class="font-weight-bold">Profile Photo</label>
            <input asp-for="PhotoURL" class="form-control" />
            <span asp-validation-for="PhotoURL" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Position" class="font-weight-bold">Work Position</label>
            <input asp-for="Position" class="form-control" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-warning mr-2">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
