@model XtraBlog.UI.Dtos.PostDtos.PostEditDto

<div class="container w-50 mt-5 mb-5 shadow p-4 rounded">
    <h2 class="text-center mb-4">Edit Post</h2>
    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <label asp-for="Title" class="font-weight-bold">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HomeDescription" class="font-weight-bold">Post Description</label>
            <textarea asp-for="HomeDescription" class="form-control" style="height: 100px;"></textarea>
            <span asp-validation-for="HomeDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="font-weight-bold">Detail Description</label>
            <textarea asp-for="Description" class="form-control" style="height: 300px;"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhotoURL" class="font-weight-bold">Post Photo </label>
            <input asp-for="PhotoURL" class="form-control" />
            <span asp-validation-for="PhotoURL" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="VideoURL" class="font-weight-bold">Detail Video</label>
            <input asp-for="VideoURL" class="form-control" />
            <span asp-validation-for="VideoURL" class="text-danger"></span>
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-warning mr-2">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
